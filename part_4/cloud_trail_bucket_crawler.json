{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ListAccess",
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::aws-data-mesh-audit-trail-<account_id>-<region>/AWSLogs/<account_id>/"
        },
        {
            "Sid": "GetObjectAccess",
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::aws-data-mesh-audit-trail-<account_id>-<region>/AWSLogs/<account_id>/*"
        }
    ]
}