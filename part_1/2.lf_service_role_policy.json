{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3ListObjectAccess",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::REPLACE_ME_WITH_DATALAKE_BUCKET"
    },
    {
      "Sid": "S3ReadWriteAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject"
      ],
      "Resource": "arn:aws:s3:::REPLACE_ME_WITH_DATALAKE_BUCKET/*"
    },
    {
      "Sid": "KMSAccess",
      "Effect": "Allow",
      "Action": [
        "kms:Encrypt",
        "kms:Decrypt",
        "kms:GenerateDataKey",
        "kms:DescribeKey"
      ],
      "Resource": "REPLACE_WITH_KMS_KEY_ARN_CREATED_IN_STEP_1"
    }
  ]
}